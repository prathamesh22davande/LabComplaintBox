<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBE6"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/UsernameText"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_x="82dp"
        android:layout_y="190dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#17262A"
        android:textColorHint="#17262A"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="184dp" />

    <EditText
        android:id="@+id/PasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="87dp"
        android:layout_y="292dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#17262A"
        android:textColorHint="#17262A"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="236dp" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_x="135dp"
        android:layout_y="380dp"
        android:background="#17262A"
        android:onClick="LoginButtonClick"
        android:text="Login"
        android:textColor="#FFFBE6"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/SignUpText"
        android:layout_width="233dp"
        android:layout_height="38dp"
        android:layout_x="82dp"
        android:layout_y="456dp"
        android:onClick="SignUpButtonClick"
        android:text="Not Registered? Sign Up"
        android:textColor="#17262A"
        android:textColorHint="#17262A"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="473dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="112dp"
        android:layout_height="96dp"
        android:layout_x="133dp"
        android:layout_y="212dp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="342dp" />
</AbsoluteLayout>